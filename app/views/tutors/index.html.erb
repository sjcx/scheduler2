<!-- body -->
<div class="page-header">
	<h1>Tutors</h1>
</div>
<div>
	<table class="table table-hover">
		<tr>
			<th>Name</th>
			<th>Bio</th>
			<th></th>
		</tr>
		<% @tutors.each do |tutor| %>
		<tr>
			<td><%= tutor.name %></td>
			<td><%= tutor.bio %></td>
			<td><a href="tutors/<%= tutor.id %>">Show</a></td>
		</tr>
		<% end %>
	</table>
</div>